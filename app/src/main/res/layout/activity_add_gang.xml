<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_gang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.crusher.hppysouls.gangs.AddGang">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Add Gang"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/gang_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:text="Gang Name:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/gang_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gang_name_view"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/gang_name_view"
        android:layout_toRightOf="@+id/gang_name_view"
        android:hint="Gang Name" />

    <TextView
        android:id="@+id/gang_type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gang_name_view"
        android:layout_marginTop="30dp"
        android:text="Type:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/gang_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/gang_type_view"
        android:layout_toEndOf="@+id/gang_type_view"
        android:layout_toRightOf="@+id/gang_type_view" />

    <Button
        android:id="@+id/add_gang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gang_type_view"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="Add Gang"
        android:textColor="#fff"
        android:textSize="15dp" />


</RelativeLayout>
